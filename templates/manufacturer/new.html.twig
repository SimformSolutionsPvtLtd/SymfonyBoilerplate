{% extends 'admin/admin_base.html.twig' %}

{% block body %}
    <section class="content">
        {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
        {% form_theme form 'admin/form_errors.html.twig' %}

        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header bg-light">
                        <h4 class="text-bold">{{ (manufacturer.id)? 'Edit':'New' }} manufacturer</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    {% set required_companyName = form.companyName.vars.errors|length > 0 ? 'is-invalid':'' %}
                                    {{ form_label(form.companyName) }}<span>*</span>
                                    {{ form_widget(form.companyName, {'attr': {'class': 'form-control '~ required_companyName}}) }}
                                    {{ form_errors(form.companyName) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    {% set required_city = form.city.vars.errors|length > 0 ? 'is-invalid':'' %}
                                    {{ form_label(form.city) }}<span>*</span>
                                    {{ form_widget(form.city, {'attr': {'class': 'form-control '~ required_city}}) }}
                                    {{ form_errors(form.city) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <a href="{{ path('manufacturer_index') }}" class="btn btn-outline-secondary mr-2">{{ 'Cancel'|trans }}</a>
                        <input type="submit" value="{{ 'Save'|trans }}" class="btn btn-purple">
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </section>
{% endblock %}
